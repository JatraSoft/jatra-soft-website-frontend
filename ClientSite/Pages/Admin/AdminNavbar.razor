@using ClientSite.Models
@using ClientSite.Services
@inject AuthService AuthService
@inject NavigationManager Nav

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm px-4">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center fw-bold fs-4" href="/admin/dashboard" style="font-family: 'Noto Sans Bengali', sans-serif;">
            <span style="color: #006a4e;">Bits</span> <!-- Dark green like the flag -->
            <span style="color: #f42a41;">Bangla</span> <!-- Red like the flag -->
        </a>
        <!-- Hamburger for mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="adminNavbar">
            <!-- Left-side menu links -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                @if (user != null && user.Role == "Admin")
                {
                    <li class="nav-item"><a class="nav-link" href="/admin/dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/home">Manage Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/about">Manage About</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/team">Manage Team</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/dashboard">Manage Testimonial</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/blogs">Manage Blog</a></li>
                }
            </ul>

            <!-- Right-side user info & logout -->
            <ul class="navbar-nav ms-auto align-items-center">
                @if (user != null)
                {
                    <li class="nav-item me-3 text-light">
                        Hello, <b>@user.Username</b> (@user.Role)
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-outline-light btn-sm" @onclick="Logout">Logout</button>
                    </li>
                }
            </ul>
        </div>
    </div>    
</nav>

@code {
    private AuthResponse? user;

    protected override async Task OnInitializedAsync()
    {
        user = await AuthService.GetCurrentUserAsync();

        if (user == null)
        {
            Nav.NavigateTo("/login", true);
        }
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Nav.NavigateTo("/login", true);
    }
}
