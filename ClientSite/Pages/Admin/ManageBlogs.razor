@page "/admin/blogs"
@layout AdminLayout

@using ClientSite.Models
@using ClientSite.Services
@inject IBlogService BlogService
@inject IJSRuntime JSRuntime
@using ClientSite.PageBases
@inherits ProtectedAdminPage

<h3 class="mb-4">Admin Blog Management</h3>

<button class="btn btn-success mb-3" @onclick="ShowAddForm">Add New Blog</button>

@if (loading)
{
    <div class="text-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (blogs == null || !blogs.Any())
{
    <p class="text-center text-muted mt-5">
        No blogs found. Click <strong>Add New Blog</strong> to create your first blog post.
    </p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Created At</th>
                <th>Featured</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in blogs)
            {
                <tr @key="blog.Id">
                    <td>@blog.Title</td>
                    <td>@blog.Category</td>
                    <td>@blog.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@(blog.IsFeatured ? "Yes" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-info me-2" @onclick="() => EditBlog(blog)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteBlog(blog.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Modal Popup -->
@if (showForm)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog" aria-modal="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content rounded-4 shadow-lg">
                <div class="modal-header">
                    <h5 class="modal-title">@((editing ? "Edit Blog" : "Add New Blog"))</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="currentBlog" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <InputText class="form-control" @bind-Value="currentBlog.Title" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Slug</label>
                            <InputText class="form-control" @bind-Value="currentBlog.Slug" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Short Description</label>
                            <InputText class="form-control" @bind-Value="currentBlog.ShortDescription" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Long Description</label>
                            <InputTextArea class="form-control" rows="5" @bind-Value="currentBlog.LongDescription" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <InputText class="form-control" @bind-Value="currentBlog.Category" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tags (comma separated)</label>
                            <InputText class="form-control" @bind-Value="currentBlog.Tags" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Author Name</label>
                            <InputText class="form-control" @bind-Value="currentBlog.AuthorName" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Author Image URL</label>
                            <InputText class="form-control" @bind-Value="currentBlog.AuthorImageUrl" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Image URL</label>
                            <InputText class="form-control" @bind-Value="currentBlog.ImageUrl" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Video URL</label>
                            <InputText class="form-control" @bind-Value="currentBlog.VideoUrl" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Read Time (minutes)</label>
                            <InputNumber class="form-control" @bind-Value="currentBlog.ReadTimeMinutes" />
                        </div>

                        <div class="form-check mb-3">
                            <InputCheckbox class="form-check-input" @bind-Value="currentBlog.IsFeatured" />
                            <label class="form-check-label">Featured Blog?</label>
                        </div>

                        @if (!string.IsNullOrEmpty(formError))
                        {
                            <div class="alert alert-danger">@formError</div>
                        }

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary me-2" disabled="@saving">
                                @if (saving)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span class="ms-2">Saving...</span>
                                }
                                else
                                {
                                    @(editing ? "Update Blog" : "Add Blog")
                                }
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal" disabled="@saving">Cancel</button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<BlogPost> blogs = new();
    private BlogPost currentBlog = new();
    private bool showForm = false;
    private bool editing = false;
    private bool loading = true;
    private bool saving = false;
    private string? formError;

    protected override async Task OnInitializedAsync() => await LoadBlogs();

    private async Task LoadBlogs()
    {
        loading = true;
        try
        {
            blogs = await BlogService.GetAllBlogsAsync() ?? new List<BlogPost>();
        }
        catch
        {
            blogs = new List<BlogPost>();
            await JSRuntime.InvokeVoidAsync("console.error", "Failed to load blogs.");
        }
        finally
        {
            loading = false;
            StateHasChanged();
        }
    }

    private void ShowAddForm()
    {
        currentBlog = new BlogPost();
        editing = false;
        formError = null;
        showForm = true;
    }

    private void EditBlog(BlogPost blog)
    {
        currentBlog = new BlogPost
        {
            Id = blog.Id,
            Title = blog.Title,
            Slug = blog.Slug,
            ShortDescription = blog.ShortDescription,
            LongDescription = blog.LongDescription,
            ImageUrl = blog.ImageUrl,
            VideoUrl = blog.VideoUrl,
            Category = blog.Category,
            Tags = blog.Tags,
            AuthorName = blog.AuthorName,
            AuthorImageUrl = blog.AuthorImageUrl,
            ReadTimeMinutes = blog.ReadTimeMinutes,
            IsFeatured = blog.IsFeatured,
            CreatedAt = blog.CreatedAt
        };

        formError = null;
        editing = true;
        showForm = true;
    }

    private void CloseModal()
    {
        showForm = false;
        saving = false;
        formError = null;
        // Reset the model to avoid carrying over validation state
        currentBlog = new BlogPost();
        editing = false;
    }

    private async Task HandleValidSubmit()
    {
        formError = null;
        saving = true;

        try
        {
            if (editing)
            {
                var success = await BlogService.UpdateBlogAsync(currentBlog.Id, currentBlog);
                if (success)
                {
                    await LoadBlogs();
                    await JSRuntime.InvokeVoidAsync("alert", "Blog updated successfully.");
                }
                else
                {
                    formError = "Failed to update the blog. Please try again.";
                }
            }
            else
            {
                // Ensure CreatedAt is set for the new blog
                currentBlog.CreatedAt = DateTime.UtcNow;

                var success = await BlogService.CreateBlogAsync(currentBlog);
                if (success)
                {
                    await LoadBlogs();
                    await JSRuntime.InvokeVoidAsync("alert", "Blog added successfully.");
                }
                else
                {
                    formError = "Failed to add the blog. Please check your input and try again.";
                }
            }
        }
        catch (Exception ex)
        {
            formError = "An unexpected error occurred. " + ex.Message;
            await JSRuntime.InvokeVoidAsync("console.error", ex.ToString());
        }
        finally
        {
            saving = false;
            // Keep modal open if there was an error, otherwise close it
            if (string.IsNullOrEmpty(formError))
            {
                CloseModal();
            }
            StateHasChanged();
        }
    }

    private async Task DeleteBlog(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this blog?");
        if (!confirmed) return;

        try
        {
            var success = await BlogService.DeleteBlogAsync(id);
            if (success)
            {
                await LoadBlogs();
                await JSRuntime.InvokeVoidAsync("alert", "Blog deleted.");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to delete blog.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Error deleting blog: " + ex.Message);
            await JSRuntime.InvokeVoidAsync("console.error", ex.ToString());
        }
    }
}